                                <posx>0</posx>
                                <posy>0</posy>
                                <width>123</width>
                                <height>123</height>
                                <texture>script.plex/thumb_fallbacks/photo.png</texture>
                            </control>
                            <control type="image">
                                <posx>0</posx>
                                <posy>0</posy>
                                <width>123</width>
                                <height>123</height>
                                <texture fallback="script.plex/thumb_fallbacks/broken-photo-thumb.png" background="true">$INFO[ListItem.Thumb]</texture>
                                <aspectratio>scale</aspectratio>
                            </control>
                        </control>
                    </control>
                </focusedlayout>
            </control>
            <control type="image">
                <posx>892.5</posx>
                <posy>1080</posy>
                <width>135</width>
                <height>135</height>
                <texture border="10">script.plex/home/selected.png</texture>
            </control>

