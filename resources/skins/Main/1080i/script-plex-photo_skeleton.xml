                <colordiffuse>FF000000</colordiffuse>
            </control>
            <control type="fixedlist" id="500">
                <posx>0</posx>
                <posy>1080</posy>
                <width>1920</width>
                <height>135</height>
                <hitrect x="28" y="28" w="69" h="45" />

                <scrolltime>0</scrolltime>
                <orientation>horizontal</orientation>
                <preloaditems>4</preloaditems>
                <focusposition>7</focusposition>
                <!-- ITEM LAYOUT ########################################## -->
                <itemlayout width="128">
                    <control type="group">
                        <posx>0</posx>
                        <posy>0</posy>
                        <control type="group">
                            <posx>2.5</posx>
                            <posy>6</posy>
                            <control type="image">
                                <posx>0</posx>
                                <posy>0</posy>
                                <width>123</width>
                                <height>123</height>
                                <texture>script.plex/thumb_fallbacks/photo.png</texture>
                            </control>
                            <control type="image">
                                <posx>0</posx>
                                <posy>0</posy>
                                <width>123</width>
                                <height>123</height>
                                <texture fallback="script.plex/thumb_fallbacks/broken-photo-thumb.png" background="true">$INFO[ListItem.Thumb]</texture>
                                <aspectratio>scale</aspectratio>
                            </control>
                        </control>
                    </control>
                </itemlayout>

                <!-- FOCUSED LAYOUT ####################################### -->
                <focusedlayout width="128">
                    <control type="group">
                        <posx>0</posx>
                        <posy>0</posy>
                        <control type="group">
                            <posx>2.5</posx>
                            <posy>6</posy>
